<div class="row">
    <div class="three columns">
        <label for="smallblind-input"></label>
        <input class="u-full-width inp" type="number" id="smallblind-input" name="smallblind-input">
    </div>
    <div class="three columns">
        <label for="bigblind-input">Stack</label>
        <input class="u-full-width inp" type="number" id="bigblind-input" name="bigblind-input">
    </div>
    <div class="five columns">
        <label for="straddle-input">Straddle Rules</label>
        <select class="u-full-width" id="straddle-input" name="straddle-inp">
            <option value="" selected disabled hidden>Change straddle rules</option>
            <option value="0">No Straddle</option>
            <option value="1">Only straddle after bb</option>
            <option value="-1">Can straddle if player before straddled</option>
        </select>
    </div>
</div>