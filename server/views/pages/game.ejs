<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body>
    <div class="scaleable-wrapper" id="scaleable-wrapper">
        <div class="page-contents" id="page-contents">
            <header>
                <%- include('../partials/header'); %>
            </header>
            <div id="straddle-abilities">
                <label class="single-straddle cbox collapse">
                    <span class="label-body">UTG Straddle</span>
                    <input type="checkbox" name="singleStraddleBox">
                </label>
                <label class="multi-straddle cbox collapse">
                    <span class="label-body">Multi-Straddle</span>
                    <input type="checkbox" name="multiStraddleBox">
                </label>
            </div>
            <main class="container">
                <div id="table-img">
                    <div class="ovalparent">
                        <div id="table">
                            <div class="group-actions u-full-width">
                                <div id="pot">
                                    <div id="pot-amount">
                                        <% if (pot) { %>
                                            <%= pot %>
                                        <% } %>
                                    </div>
                                </div>
                                <div id="board">
                                    <!-- <div id="deep-stack-poker">
                                        DEEP STACK POKER
                                    </div> -->
                                    <div id="backdrop"></div>
                                    <div id="cards">
                                        <% let show = true %>
                                        <% if (roundName == 'deal') { %>
                                        <div id="flop" class="hidden">
                                        <% } else { %>
                                        <div id="flop">
                                        <% } %>
                                            <%- include('../partials/card'); %>
                                            <%- include('../partials/card'); %>
                                            <%- include('../partials/card'); %>
                                        </div>
                                        <% if (roundName == 'deal' || roundName == 'flop') { %>
                                        <div id="turn" class="hidden">
                                        <% } else { %>
                                        <div id="turn">
                                        <% } %>
                                            <%- include('../partials/card'); %>
                                        </div>
                                        <% if (roundName == 'river' || roundName == 'showdown') { %>
                                        <div id="river">
                                        <% } else { %>
                                        <div id="river" class="hidden">
                                        <% } %>
                                            <%- include('../partials/card'); %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                            <div id="table-sub-root"></div>
            </main>
            <div class="below-table u-full-width">
                <%- include('../partials/buyinLog'); %>
                <%- include('../partials/gameLog'); %>
                <%- include('../partials/chatroom'); %>
                <%- include('../partials/actions'); %>
            </div>
        </div>
    </div>
<!--    <script type="module" src="../poker-logic/lib/table-state.js"></script>-->
<!--    <script type="module" src="../server/server-logic.js"></script>-->
<!--    <script type="module" src="../public/main.js"></script>-->
<!--    <script src="../public/bundle.js"></script>-->
        <script src="../../../client/dist/main.js"></script>
</body>

</html>